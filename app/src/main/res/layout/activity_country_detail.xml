<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/white"
    tools:context=".view.CountryDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_flag"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/dimen_24"
            android:contentDescription="@string/flag_image_country"
            android:scaleType="fitXY"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dimen_32"
            app:layout_constraintTop_toBottomOf="@id/img_flag"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/last_names"
            android:textAppearance="?attr/textAppearanceHeadline6"/>
        <TextView
            android:id="@+id/code_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_20"
            app:layout_constraintTop_toBottomOf="@id/img_flag"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="?attr/textAppearanceHeadline3"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/native_name"
            style="@style/label"
            android:text="@{country.nativeName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/countryName"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/capital"
            style="@style/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/native_name"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/population"
            style="@style/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/capital"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/region"
            style="@style/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/population"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/currency"
            style="@style/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/area"
            style="@style/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/region"
            tools:text="@tools:sample/last_names" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>